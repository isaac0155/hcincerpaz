<%- include("./../../Partes/cabecera.ejs") %>

<link rel="stylesheet" href="/estilos/contenido.css">
<link rel="stylesheet" href="/estilos/estiloFichas.css">
<div class="contenido">
  <div class="contenedorCerrar">
    <i class="modalCerrar fas fa-times-circle" id="desTipo"></i>
  </div>
  <form class="" action="/Categorias/Actualizar/<%= cat.id_categoria_producto %>" id="form <%= cat.id_categoria_producto %>" method="post">
    <div class="jumbotron jumbotron-fluid content1">
      <div class="divGrande">

        <p>Modificar categoria <%= cat.nombre_categoria %></p>

        <div class="container div1">
          <div class="div12">
            <div class="form-group cajas1">
              <label for="exampleFormControlInput1">Tipo de Producto </label>
              <!-- <input class="form-control form-control-lg" type="text" placeholder=".form-control-lg"> -->
              <div class="form-group">
                <select class="form-control form-control-lg" name="tipo" id="exampleFormControlSelect1" required>
                  <% for(var i=0; i<tipos.length; i++) {
                       if(tipos[i].id_tipo_producto == cat.id_tipo_producto) { %>
                          <option value="<%= tipos[i].id_tipo_producto %>" selected> <%=tipos[i].nombre_tipo %> </option>
                    <% }
                       else
                       {%>
                          <option value="<%= tipos[i].id_tipo_producto %>"> <%=tipos[i].nombre_tipo %> </option>
                    <% } %>
                  <% } %>
                </select>
              </div>
            </div>
            <div class="form-group cajas1">
              <label for="exampleFormControlInput1">Nombre de la Categoria</label>
              <input class="form-control form-control-lg" name="nombre" type="text" required placeholder="Nombre de la Categoria" value="<%= cat.nombre_categoria %>">
            </div>
          </div>
          <input class="enlaceAzul btn btn-success" type="submit" name="" value="Guardar">
          <a class="enlaceAzul btn btn-danger" href="/Categorias/Eliminar/<%= cat.id_categoria_producto %>/<%= cat.id_tipo_producto %>"> Eliminar </a>
        </div>
      </div>
    </div>
  </form>
</div>


<%- include("./../../Partes/piePagina.ejs") %>
